@model STLSitesWebApp.ViewModels.Location.LocationEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LocationEditViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationCounty"></label>
                <select asp-for="LocationCounty" asp-items="Model.LocationCounties"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryIds" class="control-label"></label>
                @foreach (var category in Model.Categories)
                {
                    <label>@category.Name</label>
                    @if (Model.CategoryIds.Contains(category.Id))
                    {
                        <input type="checkbox" value="@category.Id" name="CategoryIDs" checked />
                    }
                    else
                    {
                        <input type="checkbox" value="@category.Id" name="CategoryIDs" />
                    }
                }
                <span asp-validation-for="CategoryIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

